<h1>Submit a Character for <%= @movie.name %></h1>

<form method="post" 
			action="/movies/<%= @movie.id %>/characters/new">

	<label for="name">Name</label>
	<input type="text" name="name" id="name"><br><br>

	<label>Gender</label><br>
	<label for="male">Male</label>
	<input type="radio" name="gender" id="male" value="M">
	<label for="female">Female</label>
	<input type="radio" name="gender" id="female" value="F"><br><br>

	<label>Dies?</label><br>
	<label for="yes">Yes</label>
	<input type="radio" name="dies_in_movie" id="yes" value="1">
	<label for="no">No</label>
	<input type="radio" name="dies_in_movie" id="no" value="0"><br><br>

	<label for="img_src">Image url</label>
	<input type="text" name="img_src" id="img_src"><br><br>

	<button type="submit">
			Submit Movie
	</button>
</form>